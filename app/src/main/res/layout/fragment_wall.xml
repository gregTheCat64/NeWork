<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screens.WallFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:id="@+id/toolBarFrame"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"

        android:background="@color/color_primary"
        app:layout_scrollFlags="scroll|enterAlways"
       >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_button"
                style="@style/Widget.AppTheme.WhiteIconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:icon="@drawable/ic_baseline_arrow_back_24" />

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="@dimen/dim32dp"
                android:layout_marginEnd="@dimen/dim16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_account_circle_24"
                />

            <TextView
                android:id="@+id/name"
                style="@style/TextAppearance.AppCompat.WhiteCaption"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Стена"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/refreshBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppTheme.WhiteIconButton"
                android:layout_gravity="center_vertical"
                app:icon="@drawable/ic_baseline_refresh_24"
                />



    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center"
        android:padding="@dimen/dim8dp"
        />






    <com.google.android.material.button.MaterialButton
        android:id="@+id/jobsListBtn"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim32dp"
        android:checkable="true"
        app:icon="@drawable/ic_expand_selector"
        android:text="Места работы"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addJobBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.TextButton"
        android:text="Добавить работу"
        android:visibility="gone"
        android:layout_gravity="center"
        app:icon="@drawable/ic_baseline_add_24"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/jobsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_job"
        />



    <Button
        android:id="@+id/postListBtn"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_marginStart="@dimen/dim32dp"
        android:checkable="true"
        app:icon="@drawable/ic_expand_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Записи пользователя"
        />


    <TextView
        android:id="@+id/emptyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_posts"
        android:visibility="gone"
        android:padding="@dimen/dim64dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_post" />

    <Button
        android:id="@+id/eventsListBtn"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_marginStart="@dimen/dim32dp"
        android:checkable="true"
        app:icon="@drawable/ic_expand_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Автор мероприятий"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/card_event" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>






