<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/attachImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dim8dp"
        android:visibility="visible"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/attachAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/attachVideo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dim16dp"
        app:icon="@drawable/ic_play_btn_selector"
        android:checkable="true"
        android:text="Аудиозапись"
        />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/videoGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="attachVideo, videoPlayBtn"
        />
    <VideoView
        android:id="@+id/attachVideo"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintTop_toBottomOf="@id/attachImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dim8dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/videoPlayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintTop_toTopOf="@id/attachVideo"
        app:layout_constraintStart_toStartOf="@id/attachVideo"
        app:layout_constraintEnd_toEndOf="@id/attachVideo"
        app:layout_constraintBottom_toBottomOf="@id/attachVideo"
        android:text="Воспроизвести"
        app:icon="@drawable/ic_baseline_play_circle_24"
        />

</androidx.constraintlayout.widget.ConstraintLayout>