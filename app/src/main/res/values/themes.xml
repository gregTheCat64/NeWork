<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeWork" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#02433D</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF9800</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#02433D</item>
                <!-- Customize your theme here. -->
        <item name="android:colorPrimary">#02433D</item>

    </style>

    <style name="Widget.AppTheme.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/icon_button_tint</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.WhiteIconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.LikeCheckBox" parent="Widget.Material3.Button.ElevatedButton">
        <item name="iconTint">@color/like_checkbox_tint</item>
         <item name="android:inset">12dp</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <style name="Widget.AppTheme.FavCheckBox" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/white</item>
        <item name="android:inset">12dp</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>
    
    <style name="SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="TextAppearance.AppCompat.WhiteCaption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/white</item>
        <item name="tint">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget.AppCompat.TextButton.Checked" parent="Widget.Material3.Button.TextButton">
        <item name="android:minHeight">24dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">18sp</item>


    </style>

    <style name="Widget.AppCompat.TextButton.UnChecked" parent="Widget.Material3.Button.TextButton">
        <item name="android:minHeight">24dp</item>
        <item name="android:padding">2dp</item>
        <item name="color">@color/color_primary</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

</resources>